    <section>
        
            <table width="100%">
                <td id="recipe" width="50%" valign="top">
                    <p>
                        Recipe
                    </p>



                    @{int i1; }
                    @{int n; }
                    @foreach (var cat in Model.P_Cat)
                    {
                        <p>
                            @cat.Name
                            <br />
                        </p>
                        i1 = 1;
                        n = 1;
                        foreach (var item in Model.P_recipe)
                        {
                            if (item.Product_CatId == cat.Id)
                            {
                                if (n == 1)
                                {
                                    @:<div class="row mt-4">
                                    }


                                    <!-- ITEM 1 START-->
                                    <div class="col-sm-4">

                                        <!-- LABEL START -->
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="text-center label day">
                                                    <p> @i1 </p>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- //LABEL END -->
                                        <!-- ITEM CONTENT -->
                                        <div class="container itemcard mt-4">
                                            <div class="row ">

                                                <!-- ITEM IMAGE -->
                                                <div class="col-sm-4 text-center">
                                                    <img src="@item.Pic_link" class="" alt="" />
                                                </div>
                                                <!-- //ITEM IMAGE END -->
                                                <!-- ITEM DESCRIPTION -->
                                                <div class="col-sm-8">
                                                    <h4>@Html.DisplayFor(modelItem => item.Description)</h4>


                                                    <h5></h5>
                                                    <p>@Html.DisplayFor(modelItem => item.Product_Cat.Name)</p>
                                                </div>
                                                <!-- //ITEM DESCRIPTION END -->
                                            </div>

                                            <!-- Add OPTION -->
                                            <div class="delete text-right">
                                                <p> <i class="mdi mdi-delete mr-1"></i> @Html.ActionLink("Delete", "Delete", new { fid = item.Id })</p>
                                            </div>
                                            <!-- //ADD OPTION END -->

                                        </div>
                                        <!-- //ITEM CONTENT END -->
                                    </div>
                                    <!-- //ITEM 1 END -->
                                    if (n == 3)
                                    {
                                    @:</div>
                                }

                                i1 = i1 + 1;
                                n = n + 1;
                                if (n == 4)
                                {
                                    n = 1;
                                }
                            }

                        }
                        if (n !=1)
                        {
                            @: </div>
                            }

                     }




                    </td>

                    <td id="productselect" width="50%" valign="top">
                        <p>
                            Select Product
                        </p>

                        @{int i = 1; }
                        @if (Model.P_s != null)
                        {

                            foreach (var item in Model.P_s)
                            {
                                <!-- ITEM 1 START-->
                                <div class="col-sm-4">

