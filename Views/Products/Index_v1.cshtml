                                        <div class="row ">

                                            <!-- ITEM IMAGE -->
                                            <div class="col-sm-4 text-center">
                                                <img src="@item.Pic_link" class="" alt="" />
                                            </div>
                                            <!-- //ITEM IMAGE END -->
                                            <!-- ITEM DESCRIPTION -->
                                            <div class="col-sm-8">
                                                <h4>@Html.DisplayFor(modelItem => item.Description)</h4>


                                                <h5></h5>
                                                <p>@Html.DisplayFor(modelItem => item.Product_Cat.Name)</p>
                                            </div>
                                            <!-- //ITEM DESCRIPTION END -->
                                        </div>

                                        <!-- Add OPTION -->
                                        <div class="delete text-right">
                                            <p> <i class="mdi mdi-delete mr-1"></i> @Html.ActionLink("Add", "Add", new { fid = item.Id })</p>
                                        </div>
                                        <!-- //ADD OPTION END -->

                                    </div>
                                    <!-- //ITEM CONTENT END -->
                                </div>
                                <!-- //ITEM 1 END -->
                                i = i + 1;


                            }
                        }
                    </td>
