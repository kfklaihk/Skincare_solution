            <script type="text/javascript">
                $(document).ready(function () {
                    var trigger = $('.hamburger'),
                        overlay = $('.overlay'),
                        isClosed = false;

                    trigger.click(function () {
                        hamburger_cross();
                    });

                    function hamburger_cross() {

                        if (isClosed == true) {
                            overlay.hide();
                            trigger.removeClass('is-open');
                            trigger.addClass('is-closed');
                            isClosed = false;
                        } else {
                            overlay.show();
                            trigger.removeClass('is-closed');
                            trigger.addClass('is-open');
                            isClosed = true;
                        }
                    }

                    $('[data-toggle="offcanvas"]').click(function () {
                        $('#wrapper').toggleClass('toggled');
                    });

                    $("#print").click(function () {
                        html2canvas(document.getElementById("recipe")).then(function (canvas) {

                            var img = canvas.toDataURL("image/png");



                            // console.log(img);
                            window.jsPDF = window.jspdf.jsPDF

                            var pdf = new jsPDF('P', 'mm', 'a4');
                            var position = 10;
                            //    var pdf = new jsPDF('L', 'px', [w, h]);
                            var w = Math.floor(pdf.internal.pageSize.getWidth());
                            var h = Math.floor(pdf.internal.pageSize.getHeight());
                            var imgHeight = canvas.height * w / canvas.width;
                            var heightLeft = imgHeight;
                            //    console.log(w);
                            //    console.log(h);
                            pdf.addImage(img, 'PNG', 0, position, w, imgHeight);

                            heightLeft -= h;
                            while (heightLeft >= 0) {
                                position += heightLeft - imgHeight; // top padding for other pages
                                pdf.addPage();
                                pdf.addImage(img, 'PNG', 0, position, w, imgHeight);
                                heightLeft -= h;
                            }


                            pdf.save('recipe.pdf');

                        });
                    });





                });
            </script>

